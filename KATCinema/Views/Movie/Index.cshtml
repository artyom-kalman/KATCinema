@model IEnumerable<Movie>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
        
            @foreach(Movie item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Poster" alt="Постер для @item.Title">
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Movie" asp-action="Detail" asp-route-id="@item.Id" >Сеансы</a>
                                </div>
                                <small class="text-muted">@item.Duration минут</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
