@{
}
<div class="container px-4 px-lg-5">    
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="https://dummyimage.com/900x400/dee2e6/6c757d.jpg" alt="..." /></div>
        <div class="col-lg-5">
            <h1 class="font-weight-light">@Model.Title</h1>
            <p>@Model.Description</p>
            <p>@Model.Sessions.Count</p>
            <a class="btn btn-primary" href="#!">Call to Action!</a>
        </div>
    </div>
</div>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (Session item in Model.Sessions)
            {
                <div class="col-md-2">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.StartTime.DayOfWeek @item.StartTime.Day</p>
                            <p class="card-text">@item.StartTime.TimeOfDay</p>
                                <p class="card-text">@item.TicketPrice ₽</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Session" asp-action="Booking" asp-route-id="@item.Id">Забронировать</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
          
        </div>
    </div>
</div>

