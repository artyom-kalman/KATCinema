@model IEnumerable<Session>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
        
            @foreach(Session item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src"" alt="Постер">
                        <div class="card-body">
                            <p class="card-text">@item.Movie.Title</p>
                            <p class="card-text">@item.StartTime</p>
                            <p class="card-text">@item.TicketPrice</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Session" asp-action="Booking" asp-route-id="@item.Id" >Забронировать</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
